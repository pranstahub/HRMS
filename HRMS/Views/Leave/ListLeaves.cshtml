@model IEnumerable<Leave>

<title>
    My Leaves
</title>

<html>

<!-- Vertically centered Modal -->
<div class="modal fade" id="myModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title card-title" style="padding:0">Apply Leave</h5>
                <button type="button" class="btn-close"  data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="myModalContent"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" style="background-color:#012970;" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success">Apply</button>
            </div>
        </div>
    </div>
</div><!-- End Vertically centered Modal-->

<body>
    <div class="row">
        <div class="col-10">
            <div class="pagetitle">
                <div class="col-10">
                    <h1>My Leaves</h1>
                    <nav>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">Home</li>
                            <li class="breadcrumb-item active">Leaves</li>
                        </ol>
                    </nav>
                </div>


            </div>
        </div>
        <div class="col-2" style="padding-top:40px;">
            <a class="custom-btn" id="applyLeave" href="#">Apply Leave</a>
        </div>
    </div>


    <section class="section dashboard">
        <div class="row">

            <div class="col-lg-12">
                <div class="row">

                    <!-- Leave Types -->
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Leave Types</h5>

                                <div class="row">
                                    @foreach (var leave in Model)
                                    {
                                        <div class="col-4">
                                            <div class="card">
                                                <div class="card-title" style="text-align:center;font-size:15px">
                                                    @leave.leaveName <br><br>

                                                    <span>Available: <span class="text-success pt-1 fw-bold">@leave.days</span> </span>

                                                    <br>
                                                    <span>Booked: <span class="text pt-1 fw-bold">0</span> </span>

                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div><!-- End Leave Types -->
                </div>
            </div>
        </div>
    </section>
</body>
</html>
@section scripts
    {

    <script>
        $('#applyLeave').click(function () {
            $.ajax({
                type: "GET",
                url: '@Url.Action("ApplyLeave", "Leave")',
                contentType: false,
                processData: false,
                success: function (data) {
                    $("#myModalContent").html(data);
                    $("#myModal").modal('show');
                },
                error: function () {
                    alert("Load Failed! Please contact your administrator.");
                }
            });
        });
    </script>
    }