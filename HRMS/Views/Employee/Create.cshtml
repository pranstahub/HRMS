                            }
                        });

                       

                        window.location = '@Url.Action("Index", "Employee")';

                    },

                    "error": function (data) {
                        alert("In Employee Registration:" + typeof (data))
                    }
                });
            }
            else if ($("#Password").val() != $("#ConfirmPassword").val()) {
                alert("Password and Confirm Password do not Match!");
            }
            else {
