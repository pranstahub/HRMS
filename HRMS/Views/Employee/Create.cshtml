                        "locationId": $('#locationId').val(),
                        "birthDate": $('#birthDate').val(),
                        "age": $('#age').val(),
                        "sex": $('#sex').val(),
                        "address": $('#address').val(),
                        "supervisorId": $('#supervisorId').val(),
                        // "filepath": $('#pfp').val()
                    },

                    "success": function (data) {
                        var primaryKeyValue = parseInt(data);
                        console.log("Employee Created Successfully.");

