@model HRMS.Entity.Models.Position

@{
    Layout = "_NoNavLayout";
}


<div class="row" style="text-align:center">
    <div class="col-md-12">
        <form asp-action="CreatePosition">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       
            <div class="form-group">
                <label asp-for="positionName" class="control-label">Position</label>
                <input asp-for="positionName" class="form-control" />
                <span asp-validation-for="positionName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Add Position" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
