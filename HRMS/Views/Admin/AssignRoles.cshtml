@model List<HRMS.Entity.ViewModels.ManageRoleViewModel>

@{
    ViewData["Title"] = "Assign Role";
    Layout = "_NoNavLayout";
}


<h4 style="text-align:center">@ViewBag.username</h4>
<form asp-action="AssignRoles" method="post">
    <input type="hidden" value="@ViewBag.Id" name="UserId" />
    <table class="table" style="text-align:center">
        <thead>
            <tr>
                <th>
                    @* @Html.DisplayNameFor(model => model.First().RoleName) *@
                    Role
                </th>
                <th>
                    @* @Html.DisplayNameFor(model => model.First().IsSelected) *@
                    Assignment
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].RoleName)
                        <input type="hidden" asp-for="@Model[i].RoleName">
                    </td>
                    <td>
                        <input type="checkbox" asp-for="@Model[i].IsSelected">
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit"  style ="float:right" class="btn btn-success" value="Assign Roles" />
</form>